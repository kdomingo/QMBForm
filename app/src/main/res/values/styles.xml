<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/black25PercentColor</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowBackground">@color/black75PercentColor</item>

        <item name="android:textColor">@color/black25PercentColor</item><!-- TextView color -->
        <item name="android:textColorPrimary">@color/black</item><!-- pre-Lollipop EditText color -->
        <item name="android:editTextColor">@color/black</item><!-- Lollipop+ EditText color -->

        <item name="android:listDivider">@color/black25PercentColor</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimaryDark">@color/black75PercentColor</item>
        <item name="colorPrimary">@color/black75PercentColor</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:windowBackground">@color/black50PercentColor</item>

        <item name="android:textColor">@color/black75PercentColor</item><!-- TextView color -->
        <item name="android:textColorPrimary">@color/white</item><!-- pre-Lollipop EditText color -->
        <item name="android:editTextColor">@color/white</item><!-- Lollipop+ EditText color -->

        <item name="android:listDivider">@color/black75PercentColor</item>
    </style>

    <style name="TextAppearance.Form.Section" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item><!-- default textSize: 20sp -->
    </style>
    <style name="TextAppearance.Form.Label" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item><!-- default textSize: 14sp, font: Regular -->
    </style>
    <style name="TextAppearance.Form.Value" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16sp</item><!-- default textSize: 14sp, font: Medium -->
    </style>
    <style name="TextAppearance.Form.Button" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textAllCaps">true</item><!-- default textSize: 16sp -->
    </style>

</resources>
